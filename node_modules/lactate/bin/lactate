#!/usr/bin/env node

process.title = 'Lactate';

var optimist = require('optimist')

optimist.usage('Usage: $0 [options]');

var argv = optimist
  .options('port', {
    describe:'Server port',
    default:8080,
    alias:'p'
  })
  .options('root', {
    describe:'Local path',
    default:process.cwd(),
    alias:'r'
  })
  .options('from', {
    describe:'Public path',
    default:'',
    alias:'f'
  })
  .options('subdirs', {
    describe:'Serve subdirectories',
    default:true,
    alias:'s'
  })
  .options('hidden', {
    describe:'Serve hidden files',
    default:false,
    alias:'h'
  })
  .options('error_pages', {
    describe:'Serve error pages',
    default:true,
    alias:['error-pages']
  })
  .options('autoindex', {
    describe:'Automatically index directories',
    default:false,
    alias:'a'
  })
  .options('cache', {
    describe:'Store assets in-memory',
    default:true,
    alias:'c'
  })
  .options('watch_files', {
    describe:'Watch files for cache update',
    default:true,
    alias:['watch-files']
  })
  .options('client_cache', {
    describe:'Client-side caching max-age',
    default:172800,
    alias:['client-cache']
  })
  .options('gzip', {
    describe:'Gzip text assets',
    default:true,
    alias:'g'
  })
  .options('minify', {
    describe:'Minify text assets',
    default:false,
    alias:'m'
  })
  .options('bundle', {
    describe:'Bundle text assets',
    default:false,
    alias:'b'
  })
  .options('rebundle', {
    describe:'Rebundle assets if modified',
    default:true,
    alias:'rb'
  })
  .options('headers', {
    describe:'Custom response headers',
    default:'',
    alias:'H'
  })
  .options('debug', {
    describe:'Log HTTP info',
    default:true,
    alias:'d'
  })
  .options('quiet', {
    describe:'Prevent all log output',
    default:false,
    alias:'q'
  })
  .argv;

if (argv.help) return optimist.showHelp()

argv.headers = require('querystring').parse(argv.headers);

var log = (function() {
  if (!argv.quiet) {
    return console.log;
  } else {
    argv.debug = false;
    return new(Function);
  };
})();

var Lactate = require('lactate');
var dir = Lactate.dir(argv.root, argv);
var handler = dir.toMiddleware();

var cluster = require('cluster');
var cpus = require('os').cpus().length;
var http = require('http');
var port = argv.port || 8080;
var listening = 0;

if (!cluster.isMaster) {
  return http.createServer(handler).listen(port);
};

log('Using options\n', JSON.stringify(dir.opts, null, 2).replace(/\{|\}/g, ''));

for (var i=0;i<cpus;i++) {
  cluster.fork();
};

cluster.on('listening', function(worker, address) {
  if (++listening === cpus) {
    log(listening + ' workers listening on port ' + port);
  };
});

cluster.on('exit', function(worker, code, signal) {
  console.log('worker ' + worker.process.pid + ' died');
});
